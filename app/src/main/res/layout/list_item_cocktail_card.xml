<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginHorizontal="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_standard"
    android:layout_marginBottom="@dimen/margin_standard"
    app:cardCornerRadius="20dp"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_cocktail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_item_height_standard"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text_view_cocktail_name"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/margin_standard"
            tools:text="@sample/cocktails.json/data/name" />

        <TextView
            android:id="@+id/text_view_cocktail_description"
            style="?attr/textAppearanceBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="9"
            android:paddingHorizontal="@dimen/margin_semi"
            android:layout_marginBottom="@dimen/margin_standard"
            android:paddingTop="@dimen/margin_standard"
            android:text="@sample/cocktails.json/data/description" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
